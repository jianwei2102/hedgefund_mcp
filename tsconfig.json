{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true, 
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true, 
    "moduleResolution": "node", 
    "allowSyntheticDefaultImports": true 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
